<installation version="1.0">
	<info>
		<appname>Squirrel SQL Client</appname>
		<appversion>1.1beta3</appversion>
		<authors>
			<author email="colbell@users.sourceforge.net" name="Colin Bell"/>
		</authors>
		<url>http://sourceforge.net/projects/squirrel-sql/</url>
	</info>
	<guiprefs width="640" resizable="no" height="480"/>
	<locale>
		<langpack iso3="eng"/>
	</locale>
	<resources>
		<res id="LicencePanel.licence" src="doc\licences\squirrel_licence.txt"/>
		<res id="HTMLInfoPanel.info" src="doc\readme.html"/>
	</resources>
	<panels>
		<panel classname="HelloPanel"/>
		<panel classname="HTMLInfoPanel"/>
		<panel classname="LicencePanel"/>
		<panel classname="TargetPanel"/>
		<panel classname="PacksPanel"/>
		<panel classname="InstallPanel"/>
		<panel classname="FinishPanel"/>
	</panels>
	<packs>
		<pack required="yes" name="Base">
			<description>SQL Client</description>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\plugins"/>
			<file targetdir="$INSTALL_PATH\lib" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\lib\fw.jar"/>
			<file targetdir="$INSTALL_PATH\lib" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\lib\log4j.jar"/>
			<file targetdir="$INSTALL_PATH\lib" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\lib\nanoxml-2.1.jar"/>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\doc"/>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\squirrel-sql.bat"/>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\squirrel-sql.sh"/>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\log4j.properties"/>
			<file targetdir="$INSTALL_PATH" src="..\squirrel-sql-dist\squirrel-sql-1.1beta3\core\dist\lib\squirrel-sql.jar"/>
		</pack>
	</packs>
</installation>
